{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data_files/*"],
      "@images/*": ["src/images/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true, // Permite importar archivos JSON como módulos
    "esModuleInterop": true, // Habilita la interoperabilidad entre módulos CommonJS y ES
    "allowSyntheticDefaultImports": true // Permite importaciones por defecto de módulos que usan `export =`
  }
}